[Unit]
Description=Tartil Quran LMS Platform
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/hamzoooz/profiles/tartil
Environment="PATH=/home/ubuntu/hamzoooz/profiles/tartil/venv/bin"
ExecStart=/home/ubuntu/hamzoooz/profiles/tartil/venv/bin/gunicorn tartil.wsgi:application -c gunicorn.conf.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
